{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "workflow-pattern",
  "title": "Workflow Pattern",
  "description": "Schema for workflow pattern definitions",
  "type": "object",
  "required": ["name", "version", "phases"],
  "properties": {
    "name": {
      "type": "string",
      "pattern": "^[a-z0-9-]+$"
    },
    "version": {
      "type": "string",
      "pattern": "^\\d+\\.\\d+\\.\\d+$"
    },
    "description": {
      "type": "string"
    },
    "phases": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "required": ["name"],
        "properties": {
          "name": {
            "type": "string"
          },
          "order": {
            "type": "integer",
            "minimum": 0
          },
          "template": {
            "type": "string"
          }
        }
      }
    },
    "project": {
      "type": "object"
    },
    "validation": {
      "type": "object",
      "properties": {
        "reference": {
          "type": "string",
          "enum": ["base", "strict", "medical"]
        }
      }
    }
  }
}
